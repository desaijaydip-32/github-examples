<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.SearchFragment">


    <ImageView
        android:id="@+id/imgHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_home_color"
        android:src="@drawable/home_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/nameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="66dp"
        android:background="@drawable/newcustome_background"
        android:drawableLeft="@drawable/ic_find"
        android:hint="   Find your taste"
        android:padding="22dp"
        android:textColor="#BDBDBD"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/imgHome"
        app:layout_constraintStart_toStartOf="@id/imgHome"
        app:layout_constraintTop_toTopOf="@+id/imgHome" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintGuide_percent="0.21"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="100dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guidline">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/locationImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30sp"
                android:layout_marginBottom="20dp"
                android:padding="10dp"

                android:layout_marginTop="30sp"
                android:src="@drawable/ic_location"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/homeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textSize="15sp"
                app:layout_constraintStart_toEndOf="@id/locationImg"
                app:layout_constraintTop_toTopOf="@id/locationImg" />

            <TextView
                android:id="@+id/locationTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="242 ST Marks Eve, Finland"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@id/homeTextView"
                app:layout_constraintTop_toBottomOf="@id/homeTextView" />

            <ImageView
                android:id="@+id/settingImgView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:padding="10dp"
                android:src="@drawable/ic_setting"
                app:layout_constraintBottom_toBottomOf="@id/locationTextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/homeTextView" />


            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                app:tabIndicator="@null"
                app:tabMode="fixed"
                app:tabGravity="fill"
                app:tabIconTint="@color/selector_tab"
                android:layout_marginTop="32dp"
                app:tabBackground="@drawable/selectedbgg"
                android:background="@android:color/transparent"
                app:layout_constraintTop_toBottomOf="@id/locationTextView"
                app:tabIndicatorColor="@android:color/transparent">

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:icon="@drawable/ic_fast_food"                 />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:icon="@drawable/ic_ion_pizza"
                   />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:icon="@drawable/ic_vector"
                    />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:icon="@drawable/ic_asian"/>


            </com.google.android.material.tabs.TabLayout>

            <TextView
                android:id="@+id/nearResturentTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:paddingBottom="10sp"
                android:text="Nearest Restaurents"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/tabLayout" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/restorrent1RecyclerView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/nearResturentTextView" />


            <TextView
                android:id="@+id/populerResturentTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:paddingBottom="10sp"
                android:text="Nearest Popular Restaurents"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/restorrent1RecyclerView" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/populerrestorrent1RecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="40dp"
                app:layout_constraintTop_toBottomOf="@+id/populerResturentTextView" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>






    </androidx.constraintlayout.widget.ConstraintLayout>

