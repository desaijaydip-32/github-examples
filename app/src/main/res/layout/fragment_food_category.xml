<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/nearResturentTextView"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="18dp"
            android:text="Nearest Restaurents"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:fontFamily="@font/medium"
            android:layout_height="wrap_content"/>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mrecyclerview"
            android:layout_marginTop="11dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nearResturentTextView" />


        <TextView
            android:id="@+id/populerResturentTextView"
            android:textStyle="bold"
            android:fontFamily="@font/medium"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="18dp"
            android:text="Popular Restaurents"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/mrecyclerview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/nrecyclerview2"
            android:layout_marginTop="11dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/populerResturentTextView" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>